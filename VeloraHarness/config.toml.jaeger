###################### VeloraHarness Configuration ######################
#
# Jaeger Repository - Minimal Configuration
# Models: Claude Sonnet 4.5 (Non-Reasoning), Gemini 3 Pro (Non-Reasoning)
#
# SETUP: Copy this file to config.toml and add your API keys
#   cp config.toml.jaeger config.toml
#
##########################################################################

#################################### Core ####################################
# General core configurations
##############################################################################
[core]
# Maximum number of iterations
max_iterations = 500

# Name of the default agent
default_agent = "CodeActAgent"

#################################### LLM #####################################
# Configuration for LLM models (group name starts with 'llm')
# NOTE: Set your API keys here or as environment variables
##############################################################################

# Claude Sonnet 4.5 - Standard Inference (Non-Reasoning)
[llm.claudeNonR]
model = "claude-sonnet-4-5-20250929"
api_key = "<YOUR_ANTHROPIC_API_KEY>"
temperature = 1.0
timeout = 600
num_retries = 8
retry_min_wait = 15
retry_max_wait = 120

# Google Gemini 3 Pro - Standard Inference (Non-Reasoning)
[llm.gemini]
model = "gemini/gemini-3-pro-preview"
api_key = "<YOUR_GOOGLE_API_KEY>"
temperature = 1.0
timeout = 600
num_retries = 12
retry_min_wait = 30
retry_max_wait = 180

#################################### Agent ###################################
# Configuration for agents (group name starts with 'agent')
##############################################################################
[agent]
# Whether the command tool is enabled
enable_cmd = true

# Whether the finish tool is enabled
enable_finish = true

# Whether the standard editor tool is enabled
enable_editor = true

#################################### Sandbox ###################################
# Configuration for the sandbox
##############################################################################
[sandbox]
# Sandbox timeout in seconds
timeout = 120

#################################### Condenser #################################
# Condensers control how conversation history is managed
##############################################################################
[condenser]
type = "llm"
llm_config = "claudeNonR"  # Use Claude Sonnet for history condensation
max_size = 250  # Optimized for Claude Sonnet (200K context) & Gemini 3 Pro (2M context)
keep_first = 2  # Keep first 2 messages (task description)
max_event_length = 30000  # Increased to accommodate detailed outputs

